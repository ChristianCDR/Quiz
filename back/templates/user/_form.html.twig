<div class="container mx-auto py-8 w-1/4">
    {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}
        <div class="space-y-2">
            {{ form_label(form.email, null, { 'label_attr': { 'class': 'block text-lg font-medium text-gray-700' } }) }}
            {{ form_widget(form.email, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg' } }) }}
            {{ form_errors(form.email, { 'attr': { 'class': 'text-red-500 text-lg' } }) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.password, "Mot de passe", { 'label_attr': { 'class': 'block text-lg font-medium text-gray-700' } }) }}
            {{ form_widget(form.password, { 'attr': { 'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg' } }) }}
            {{ form_errors(form.password, { 'attr': { 'class': 'text-red-500 text-lg' } }) }}
        </div>

        <div class="flex justify-between">
            <div class="space-y-2">
                {{ form_label(form.roles, "Utilisateur", { 'label_attr': { 'class': 'block text-lg font-medium text-gray-700' } }) }}
                {{ form_widget(form.roles[0], { 'attr': { 'class': 'mt-1 block px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg' } }) }}
                {{ form_errors(form.roles, { 'attr': { 'class': 'text-red-500 text-lg' } }) }}
            </div>

            <div class="space-y-2">
                {{ form_label(form.roles, "Administrateur", { 'label_attr': { 'class': 'block text-lg font-medium text-gray-700' } }) }}
                {{ form_widget(form.roles[1], { 'attr': { 'class': 'mt-1 block px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg' } }) }}
                {{ form_errors(form.roles, { 'attr': { 'class': 'text-red-500 text-lg' } }) }}
            </div>
        </div>

        <div>
            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-lg font-medium rounded-md text-white  bg-slate-700 hover:bg-sky-950 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Enregistrer
            </button>
            
            <a href="{{ path('app_user_index') }}" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-lg font-medium rounded-md text-white  bg-slate-700 hover:bg-sky-950 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> Retour </a>
        
        </div>
    {{ form_end(form) }}
</div>