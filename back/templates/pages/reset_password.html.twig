{% block title %} Réinitialiser votre mot de passe {% endblock %}

{% extends 'base.html.twig' %}

{% block body %}

  <h1> Réinitialiser votre mot de passe </h1>

  <div class="min-h-screen flex items-center justify-center">
        <div class="bg-teal p-8 rounded-lg shadow-lg w-full max-w-md">
            <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Réinitialisation du mot de passe</h2>

            {# {% if message %}
                <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
                    {{ message }}
                </div>
            {% endif %}

            {% if error %}
                <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
                    {{ error }}
                </div>
            {% endif %} #}

            {# Formulaire de réinitialisation avec Symfony form_start et form_row #}
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_row(form.password, {
                    'label': 'Nouveau mot de passe',
                    'attr': {
                        'class': 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'
                    }
                }) }}
            </div>

            <div class="flex items-center justify-between mt-4">
                <div>
                    {{ form_row(form.submit, {
                        'attr': {
                            'class': 'bg-blue-600 text-black py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300'
                        }
                    }) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}